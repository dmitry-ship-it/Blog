@page
@inject RoleManager<IdentityRole> _roleManager
@model Blog.Areas.Identity.Pages.Account.Manage.AdminPanelModel
@{
    ViewData["Title"] = "Admin panel";
}

@if (User.IsInRole("Administrator"))
{
    <h4>@ViewData["Title"]</h4>
    <hr />
    <div class="h5 mb-4">Change user role</div>

    <partial name="_StatusMessage" for="StatusMessage" class="mt-8" />

    <div class="row">
        <div class="col-md-6">
            <form id="admin-panel" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Username"></label>
                    <input asp-for="Input.Username" class="form-control" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.NewRole"></label>
                    <select asp-for="Input.NewRole">
                        @foreach (var role in _roleManager.Roles)
                        {
                            <option>@role.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Input.NewRole" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update role</button>
            </form>
        </div>
    </div>
}


