<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <div class="row mr-1">
            <div class="nav-link text-dark">
                Hello @User.Identity.Name!
            </div>
            @if (User.IsInRole(nameof(Role.Admin)))
            {
                <div class="nav-link text-danger mr-3 ml-0">(Admin)</div>
            }
        </div>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-controller="User" asp-action="Logout">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="User" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Login</a>
    </li>
}
</ul>
