@using Blog.Data
@model Blog.Models.Comment
@inject ApplicationDbContext dbContext

<div class="col">
    <form asp-action="AddComment">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" value=@Guid.NewGuid() />
        <input type="hidden" asp-for="Username" value=@User.Identity.Name />

        <div class="form-group">
            <input asp-for="Text" type="text" placeholder="Leave a comment" class="text-body form-control w-50 row" />
            <span asp-validation-for="Text" class="text-danger"></span>   
        </div>
            
        <input type="hidden" asp-for="DateCreated" value=@DateTime.Now />
        <input type="hidden" asp-for="ArticleId" value=@(((Article)ViewData["Article"]).Id) />
        <input type="hidden" asp-for="Article" value=@((Article)ViewData["Article"]) />

        <div class="form-group">
            <input type="submit" value="Send" class="btn btn-primary row" />
        </div>
    </form>
</div>

