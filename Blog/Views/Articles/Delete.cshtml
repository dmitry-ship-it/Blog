@model ArticleViewModel

@{
    ViewData["Title"] = "Delete article";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <div class="col card">
        <div class="card-header row h4 font-weight-bold">
            @Model.Title
        </div>
        <div class="card-body">
            <div class="card-text">
                @foreach (var paragraph in Model.Text.Split(Environment.NewLine))
                {
                    @paragraph 
                    <br />
                }
            </div>
            <div class="row mt-4" style="color: gray">
                @Model.Date
            </div>
        </div>
    </div>
    <hr />
    <form asp-action="Delete" class="mt-8">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete this article and @Model.Comments.Count() comments" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary m-1">Go to full list</a>
    </form>
</div>
